{{define "title"}}build todo{{end}}
{{define "main"}}
<main>

{{showerror .Error}}

<div class="col col1">
{{if .ProjID}}
	{{if eq .Page "build"}}
		<h2>Build</h2>
		<div>
			Building: <a href="./builds?buildid={{.BuildID}}">{{.BuildID}}</a>!<br />
			<br />
			<a href="./">back</a>	
		</div>
	{{else}}
		<h2>New Build</h2>
		<div>
			Project: {{.Project.Name}}<br />
			Repo: {{.Project.Git}}<br />
		</div>
		<h2>Branch</h2>
		<div>
			<form method="POST" action="./build">
			<input type="hidden" name="projid" value="{{.ProjID}}" />
			{{range $i, $b := .Branches}}
			<label><input type="radio" name="branch" value="{{$b}}" {{if eq $i 0}}checked{{end}}/> {{.}}</label><br />
			{{end}}
			<button name="page" value="build">Build!</a>
			</form>
		</div>
	{{end}}
{{end}}
</div>
</main>
{{end}}
