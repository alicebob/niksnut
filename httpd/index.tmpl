{{define "main"}}

<main>
<div class="col col2a">
	<h2>Projects</h2>
	<div>
	{{$lastCat := ""}}
	{{range config.Projects}}
		{{if and (ne .Category "") (ne .Category $lastCat)}}
			<h2>{{.Category}}</h2>
			{{$lastCat = .Category}}
		{{end}}
		<a href="./build?projid={{.ID}}" class="buildlink"><div class="project">{{.Name}}</div></a>
	{{end}}
	</div>
</div>

<div class="col col2b">
	<h2>Builds</h2>
	<div>
	{{ $prevDay := .TodayYearDay }}
	{{range .Builds}}
		{{ $b := .Status }}
		{{ if ne $prevDay $b.Start.YearDay }}
			<h2>{{$b.Start.Format "Monday, 2006-01-02"}}</h2>
		{{end}}
		{{ $prevDay = $b.Start.YearDay }}
		<a href="./builds?buildid={{.ID}}" class="buildlink">
		<div class="build">
			<div id="status-{{.ID}}">
			{{if not $b.Done}}
				{{showstatus "running" "Running"}}
			{{else if $b.Success}}
				{{showstatus "success" "Success"}}
			{{else}}
				{{showstatus "failed" "Failed"}}
			{{end}}
			</div>
			<div>
				{{with project $b.ProjectID}}{{.Name}}{{else}}[removed project]{{end}}
			</div>
			<div>
				{{$b.Branch}}
			</div>
			<div>
				{{$b.ShortRev}}
			</div>
			<div>
				{{$b.Start.Format "15:04:05"}}
			</div>
			<div>
				{{if $b.Done}}{{duration ($b.Finish.Sub $b.Start)}}{{end}}
			</div>
		</div>
		</a>
	{{else}}
		no builds
	{{end}}
	</div>
</div>
</main>

{{with .Building}}
	<script>
	// webevent to update the build status. This doesn't reload anything, only updates the CSS class of the little circles.
	const src = new EventSource("./waitfor?{{range .}}buildid={{.}}&{{end}}");
	src.onmessage = (event) => {
		const data = JSON.parse(event.data);
		if (!data.done) {
			return
		}
		const elemId = "status-" + data.buildId;
		const elem = document.getElementById(elemId);
		if (data.success) {
			elem.innerHTML = {{showstatus "success" "Success"}};
		} else {
			elem.innerHTML = {{showstatus "failed" "Failed"}};
		}
	};
	src.addEventListener("finished", (event) => {
		src.close();
	});
	</script>
{{end}}

{{end}}
